<div class="row">
  <div class="col"> 
    <p style="color: green"><%= notice %></p>

    <h1 >Tasks</h1>
    <%= link_to "New task", new_task_path , {class: 'btn btn-primary btn-sm'} %>

    <div id="tasks">
      <% @tasks.each do |task| %>
        <div id="<%= dom_id task %>">
  
          <strong>Content:</strong>
          <%= task.content %>
          <%= link_to "Edit", edit_task_path(task), {class: 'btn btn-secondary btn-sm'} %>
          <%= link_to "Destroy", task, {class: 'btn btn-danger btn-sm', data: {turbo_method: :delete, turbo_confirm:"Are you sure?"}} %>
  
        </div>
      <% end %>
    </div>


  </div>
</div>